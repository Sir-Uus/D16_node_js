<main role="main" class="container">
  <h2 class="mt-5">List Data karyawan Pak Budi</h2>
  <a href="/tambah_karyawan" class="btn btn-success">Tambah Data karyawan</a>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ID karyawan</th>
        <th scope="col">Nama karyawan</th>
        <th scope="col">Tanggal Lahir</th>
        <th scope="col">Gender</th>
        <th scope="col">Alamat</th>
        <th scope="col">Kontak</th>
        <th scope="col">N/A</th>
      </tr>
    </thead>
    <tbody>
      <% myKaryawan.forEach(karyawan=>{ %>
      <tr>
        <td><%= karyawan.id_karyawan %></td>
        <td><%= karyawan.nama_karyawan %></td>
        <td><%= karyawan.tanggal_lahir %></td>
        <td><%= karyawan.gender %></td>
        <td><%= karyawan.alamat %></td>
        <td><%= karyawan.kontak %></td>
        <td>
          <a href="/update_karyawan/<%= karyawan.id_karyawan %>" class="btn btn-warning">Edit</a>
          <form action="/delete_karyawan/<%= karyawan.id_karyawan %>" method="post" style="display: inline">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</main>
